{
  "name": "@mrspartak/config",
  "repository": "https://github.com/mrspartak/config",
  "version": "0.1.0",
  "description": "Config facade for TS",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsup",
    "test:build": "pnpm build && vitest run --dir test/built",
    "test:src": "vitest --coverage --dir test/src",
    "check:format": "biome format --write ./src",
    "check:lint": "biome lint ./src",
    "local:node": "tsx local/main.ts",
    "prepublishOnly": "node ./bin/prepublish.js && pnpm build",
    "release": "cross-env RELEASE_MODE=true np --no-tests"
  },
  "author": "Spartak Kagramanyan",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "1.8.0",
    "@types/node": "^20.14.2",
    "@vitest/coverage-v8": "^1.6.0",
    "cross-env": "^7.0.3",
    "lefthook": "^1.6.15",
    "np": "^10.0.5",
    "tsup": "^8.1.0",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "files": ["dist"],
  "publishConfig": {
    "access": "public"
  }
}
